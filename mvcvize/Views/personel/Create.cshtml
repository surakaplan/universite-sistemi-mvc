@model mvcvize.Models.personel

@{
    ViewBag.Title = "Create";
}

<h2>Yeni Personel Kaydı</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.personelad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.personelad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.personelad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.personelsoyad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.personelsoyad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.personelsoyad, "", new { @class = "text-danger" })
        </div>
    </div>
    @* birimler dropdown !!! *@
    <div class="form-group">
        @Html.LabelFor(model => model.birim, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("birimid", ViewBag.Birimler as SelectList, "Birimi Seçiniz", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.birim, "", new { @class = "text-danger" })
        </div>
    </div>





    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <br />
            <input type="submit" value="Kaydet" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Listeye geri dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
